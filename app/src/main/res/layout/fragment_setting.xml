<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shamsulkarim.vastvocabulary.SettingFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


    <View
        android:id="@+id/main_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        ></View>


    <LinearLayout
        android:id="@+id/total_counts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/top_profile"
        android:orientation="horizontal"
        android:layout_marginBottom="-85dp"
        >

        <TextView
            android:gravity="center"
            android:id="@+id/total_word_count_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="450"
            android:textColor="@color/colorPrimary"
            android:textSize="50dp"
            />

        <TextView
            android:gravity="center"
            android:id="@+id/total_learned_count_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="250"
            android:textColor="@color/colorPrimary"
            android:textSize="50dp"
            />

        <TextView
            android:gravity="center"
            android:id="@+id/total_favorite_count_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="90"
            android:textColor="@color/colorPrimary"
            android:textSize="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/total_icon"
        android:layout_marginBottom="-80dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/total_counts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_book_active"
            />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_social_school_active"
            />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_action_favorite_active"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="-20dp"
        android:layout_alignBottom="@+id/total_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Words"
            android:textSize="20dp"

            />

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Learned"
            android:textSize="20dp"

            />
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:textSize="20dp"

            />




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/top_profile"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <ImageView
            android:id="@+id/profile_setting"
            android:layout_margin="10dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_action_settings_active"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"
            />

        <View
            android:id="@+id/center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            ></View>

        <ImageView

            android:layout_marginBottom="-70dp"
            app:srcCompat="@drawable/eclipse"
            android:id="@+id/profile_eclipse"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beginner"
            android:textSize="18dp"
            android:textStyle="normal"

            android:layout_alignBottom="@+id/userNameProfile"
            android:layout_marginBottom="-30dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/userNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shamsul Karim"
            android:textSize="26dp"
            android:textColor="#ffffff"
            android:textStyle="bold"

            android:layout_alignBottom="@+id/profile_eclipse"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-60dp" />

        <android.support.v7.widget.Toolbar
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignTop="@+id/profile_setting"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/profileToolbar" />


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/dropshadow"
            android:layout_below="@id/profileToolbar"
            ></View>


    </RelativeLayout>




</RelativeLayout>
