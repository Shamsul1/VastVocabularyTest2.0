<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_learning_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f3d4b"
    tools:context="com.example.shamsulkarim.vastvocabulary.DisplayLearningScore">

    <ImageView

        android:id="@+id/display_learned_words_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/display_learned_words"
        android:layout_alignTop="@+id/display_learned_words"
        android:layout_alignLeft="@+id/display_learned_words"
        android:layout_alignRight="@+id/display_learned_words"
        android:src="@drawable/back"
        android:scaleType="fitXY"/>




    <RelativeLayout

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="13dp"
        android:id="@+id/display_learned_words"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:layout_below="@+id/actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">




        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/word1"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frank"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            />
        <TextView
            android:layout_below="@+id/word1"
            android:id="@+id/tran1"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thomas great rival Duns Scotus, does this to a large extent, at times affirming "
            android:textSize="13sp"
            />

        <View

            android:id="@+id/line1"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tran1"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#000"
            ></View>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/line1"
            android:id="@+id/word2"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frank"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            />
        <TextView
            android:layout_below="@+id/word2"
            android:id="@+id/tran2"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="honest"
            android:textSize="13sp"
            />

        <View
            android:id="@+id/line2"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tran2"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#000"
            ></View>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/line2"
            android:id="@+id/word3"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frank"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            />
        <TextView
            android:layout_below="@+id/word3"
            android:id="@+id/tran3"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thomas great rival Duns Scotus, does this to a large extent, at times affirming "
            android:textSize="13sp"
            />

        <View
            android:id="@+id/line3"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tran3"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#000"
            ></View>





        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/line3"
            android:id="@+id/word4"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frank"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            />
        <TextView
            android:layout_below="@+id/word4"
            android:id="@+id/tran4"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thomas great rival Duns Scotus, does this to a large extent, at times affirming "
            android:textSize="13sp"
            />

        <View
            android:id="@+id/line4"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tran4"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#000"
            ></View>




        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/line4"
            android:id="@+id/word5"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frank"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            />
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/word5"
            android:id="@+id/tran5"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thomas great rival Duns Scotus, does this to a large extent, at times affirming "
            android:textSize="13sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/go_home_display_score"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >


        <ImageView
            android:onClick="homeActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/home_icon_display_score"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:textSize="21sp"
            android:textColor="#000"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_above="@+id/go_home_display_score"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:onClick="trainAgain"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TRAIN AGAIN"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="#000"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stipe"
            android:scaleType="fitXY"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BEGINNER"
            android:textSize="23sp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textStyle="normal"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/session_completed_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stipe"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/session_completed"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/sessioncompleted"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/big_star"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bigstar"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/session_completed"
        />
    <ImageView
        android:id="@+id/small_star1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smallstar"
        android:layout_above="@id/session_completed"
        android:layout_toLeftOf="@+id/big_star"
        />

    <ImageView
        android:id="@+id/small_star2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smallstar"
        android:layout_above="@id/session_completed"
        android:layout_toRightOf="@+id/big_star"
        />
</RelativeLayout>
