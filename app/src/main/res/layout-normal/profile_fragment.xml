<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >


    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/profileToolbar"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:layout_width="80dp"
        app:srcCompat="@drawable/ic_school"
        android:id="@+id/imageView4"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="112dp" />

    <ImageView
        android:layout_width="80dp"
        app:srcCompat="@drawable/ic_action_favorite"
        android:id="@+id/imageView9"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <ImageView
        app:srcCompat="@drawable/ic_book"
        android:id="@+id/imageView10"
        app:layout_constraintRight_toLeftOf="@+id/imageView4"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        android:layout_width="80dp"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_height="80dp" />

    <TextView
        android:text="learned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        app:layout_constraintRight_toRightOf="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:text="favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        app:layout_constraintRight_toRightOf="@+id/imageView9"
        app:layout_constraintLeft_toLeftOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

    <TextView
        android:text="words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        app:layout_constraintLeft_toLeftOf="@+id/imageView10"
        app:layout_constraintRight_toRightOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

    <TextView
        android:textColor="#673AB7"
        android:text="444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_learned_count_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4" />

    <TextView
        android:textColor="#673AB7"
        android:text="444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_favorite_count_view"
        app:layout_constraintRight_toRightOf="@+id/imageView9"
        app:layout_constraintLeft_toLeftOf="@+id/imageView9"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <TextView
        android:textColor="#673AB7"
        android:text="444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_word_count_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintRight_toRightOf="@+id/imageView10"
        app:layout_constraintLeft_toLeftOf="@+id/imageView10"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/imageView10" />

    <TextView
        android:text="Shamsul Karim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNameProfile"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/total_learned_count_view"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/astronut"
        android:id="@+id/imageView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profileToolbar"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.13" />


</android.support.constraint.ConstraintLayout>