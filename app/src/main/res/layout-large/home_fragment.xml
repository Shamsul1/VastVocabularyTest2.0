<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/beginner_planet_home"
        android:id="@+id/imageView6"
        app:layout_constraintRight_toRightOf="@+id/beginner_text_home"
        app:layout_constraintLeft_toLeftOf="@+id/beginner_text_home"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/intermediate_text_home" />

    <TextView
        android:text="BEGINNER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beginner_text_home"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ffffff"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/intermediate_planet_home"
        android:id="@+id/imageView7"
        app:layout_constraintRight_toRightOf="@+id/intermediate_text_home"
        app:layout_constraintLeft_toLeftOf="@+id/intermediate_text_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />

    <TextView
        android:text="Intermediate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intermediate_text_home"
        app:layout_constraintRight_toRightOf="@+id/imageView6"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ffffff"
        android:textAllCaps="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/advance_planet_home"
        android:id="@+id/imageView8"
        app:layout_constraintRight_toRightOf="@+id/advance_text_home"
        app:layout_constraintLeft_toLeftOf="@+id/advance_text_home"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:text="ADVANCE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advance_text_home"
        app:layout_constraintRight_toRightOf="@+id/imageView7"
        app:layout_constraintLeft_toLeftOf="@+id/imageView7"
        android:layout_marginTop="24dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

</android.support.constraint.ConstraintLayout>