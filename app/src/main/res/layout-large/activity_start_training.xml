<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_training"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_training_background"
    tools:context="com.example.shamsulkarim.vastvocabulary.StartTrainingActivity">


    <ImageView
        android:id="@+id/planet_start_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/start_training_planet_beginner"
        app:layout_constraintHorizontal_bias="0.501" />

    <ImageView
        android:id="@+id/title_background_start_training"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:background="#f05e2a"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planet_start_training" />

    <TextView
        android:id="@+id/title_start_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:text="Beginner"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_background_start_training"
        app:layout_constraintLeft_toLeftOf="@+id/title_background_start_training"
        app:layout_constraintTop_toTopOf="@+id/title_background_start_training"
        app:layout_constraintVertical_bias="0.521" />

    <ImageView
        android:id="@+id/white1_start_training"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="9dp"
        android:background="#ffffff"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_background_start_training" />

    <ImageView
        android:id="@+id/words_background_start_training"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#f05e2a"
        app:layout_constraintBottom_toBottomOf="@+id/white1_start_training"
        app:layout_constraintLeft_toLeftOf="@+id/white1_start_training"
        app:layout_constraintTop_toTopOf="@+id/white1_start_training" />

    <ImageView
        android:id="@+id/word_icon_start_training"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/words_background_start_training"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="@+id/words_background_start_training"
        app:layout_constraintRight_toRightOf="@+id/words_background_start_training"
        app:layout_constraintTop_toTopOf="@+id/words_background_start_training"
        app:srcCompat="@drawable/ic_book_start_training" />

    <ImageView
        android:id="@+id/white2_start_training"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/white1_start_training" />


    <ImageView
        android:id="@+id/learned_background_start_training"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#f05e2a"
        app:layout_constraintBottom_toBottomOf="@+id/white2_start_training"
        app:layout_constraintLeft_toLeftOf="@+id/white2_start_training"
        app:layout_constraintTop_toTopOf="@+id/white2_start_training" />

    <ImageView
        android:id="@+id/learned_icon_start_training"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_school_start_training"
        app:layout_constraintBottom_toBottomOf="@+id/learned_background_start_training"
        app:layout_constraintLeft_toLeftOf="@+id/learned_background_start_training"
        app:layout_constraintRight_toRightOf="@+id/learned_background_start_training"
        app:layout_constraintTop_toTopOf="@+id/learned_background_start_training" />

    <ImageView
        android:id="@+id/white3_start_training"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/white2_start_training"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/left_background_start_training"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#f05e2a"
        app:layout_constraintBottom_toBottomOf="@+id/white3_start_training"
        app:layout_constraintLeft_toLeftOf="@+id/white3_start_training"
        app:layout_constraintTop_toTopOf="@+id/white3_start_training" />

    <TextView
        android:id="@+id/word_text_start_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="0dp"
        android:text="150 words"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/white2_start_training"
        app:layout_constraintLeft_toRightOf="@+id/words_background_start_training"
        app:layout_constraintTop_toTopOf="@+id/white1_start_training" />

    <TextView
        android:id="@+id/learned_text_start_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:text="40 words learned"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/white3_start_training"
        app:layout_constraintLeft_toRightOf="@+id/learned_background_start_training"
        app:layout_constraintTop_toTopOf="@+id/white2_start_training" />

    <TextView
        android:id="@+id/left_text_start_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:text="110 words left"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/white3_start_training"
        app:layout_constraintLeft_toRightOf="@+id/left_background_start_training"
        app:layout_constraintTop_toTopOf="@+id/white3_start_training" />

    <Button
        android:id="@+id/button_start_training"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="#f05e2a"
        android:onClick="onStartTraining"
        android:text="Start Training"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/left_icon_start_training"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/left_background_start_training"
        app:layout_constraintLeft_toLeftOf="@+id/left_background_start_training"
        app:layout_constraintRight_toRightOf="@+id/left_background_start_training"
        app:layout_constraintTop_toTopOf="@+id/left_background_start_training"
        app:srcCompat="@drawable/ic_learn_start_training" />

</android.support.constraint.ConstraintLayout>
